<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/OrangeButton</item>
        <item name="android:textViewStyle">@style/BlackTextView</item>
        <item name="editTextStyle">@style/OrangeEditText</item>
    </style>

    <style name="OrangeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/oval_orange_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlackTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OrangeEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>